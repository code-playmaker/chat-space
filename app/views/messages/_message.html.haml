-# .main-chat__message-list
-# - @group.messages.each do |message|
.message
  .main-chat__message-list__data
    .main-chat__message-list__data--name
      = message.user.name
    .main-chat__message-list__data--date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-list--latest-message
    - if message.content.present?
      %p.main-chat__message-list--latest-message--content
        = message.content
    = image_tag message.image.url, class: 'main-chat__message-list--latest-message--image' if message.image.present?
